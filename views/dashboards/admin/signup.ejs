<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/png" href="/public/bootstrap-dashboard/assets/img/favicon.ico">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>MS MAS SALUD</title>

	<% include head %>
</head>

<body>

	<div class="wrapper">
		<% include sideNavBar %>

			<div class="main-panel">
				<% include topNavBar %>

				<div class="content">
					<div class="container-fluid">
						<div class="row">
							<div class="col-md-8">
                <div class="card">
                  <div class="header">
                    <h4 class="title">Registro de usuarios</h4>
                  </div>
                  <div class="content">
                    <form action="/signupUser" method="post">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="form-group">
                            <label for="accType">Tipo de cuenta:</label>
                            <select class="form-control" name="accType">
                              <% for(var i = 1; i < accTypes.length; i++){ %>
                                <option value="<%=accTypes[i]%>"><%=accTypes[i]%></option>
                              <%} %>
                            </select>
                          </div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-4">
                          <label for="name">Nombre(s):</label>
                          <input type="text" class="text-uppercase form-control" id="name" name="name" required />
                        </div>
                        <div class="col-md-4">
                          <label for="dadLastName">Apellido Paterno:</label>
                          <input type="text" class="text-uppercase form-control" id="dadLastName" name="dadLastName" required />
                        </div>
                        <div class="col-md-4">
                          <label for="momLastName">Apellido Materno:</label>
                          <input type="text" class="text-uppercase form-control" id="momLastName" name="momLastName" required />
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-6">
                          <label for="cellphone">Celular:</label>
                          <input type="number" class="form-control" id="cellphone" name="cellphone" />
                        </div>
                        <div class="col-md-6">
                          <label for="email">Correo:</label>
                          <input type="email" class="form-control text-lowercase" id="email" name="email" />
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-6">
                          <label for="password">Contraseña:</label>
                          <input type="password" class="form-control" id="password" name="password" />
                        </div>
                        <div class="col-md-6">
                          <label for="verPass">Verificar Contraseña:</label>
                          <input type="password" class="form-control text-lowercase" id="verPass" name="verPass" />
                        </div>
                      </div>

                      <button type="submit" class="btn btn-info btn-fill pull-right">Registrar</button>
                      <div class="clearfix"></div>

                    </form>
                  </div>
                </div>
              </div>
						</div>
					</div>
				</div>

			</div>
	</div>


</body>

<% include ../dashboardScripts %>

</html>
