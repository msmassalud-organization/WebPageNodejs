              <div class="col-md-8">
                <div class="card">
                  <div class="header">
                    <h4 class="title">Nuevo paciente</h4>
                  </div>
                  <div class="content">
                    <form action="/addPatient" method="post">
                      <div class="row">
                        <div class="col-md-4">
                          <div class="form-group">
                            <label>Nombre(s)</label>
                            <input type="text" name="name" class="form-control text-uppercase" placeholder="Nombre(s)" required>
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label>Apellido Paterno</label>
                            <input type="text" name="dadLastName" class="form-control text-uppercase" placeholder="Apellido Paterno" required>
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label>Apellido Materno</label>
                            <input type="text" name="momLastName" class="form-control text-uppercase" placeholder="Apellido Materno" required>
                          </div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group">
                            <label for="email">Correo</label>
                            <input type="email" name="email" class="form-control" placeholder="Email">
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group">
                            <label for="cellphone">Celular</label>
                            <input type="number" name="cellphone" class="form-control" placeholder="Celular">
                          </div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group">
                            <label>CURP</label>
                            <input type="text" name="address" id="curp" class="form-control" placeholder="CURP" required>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group">
                            <label>Fecha de nacimiento:</label>
                            <input type="text" class ="form-control" name="birthday" id="date" placeholder="dd-mm-aaaa" required/>
                          </div>
                        </div>
                      </div>

                      <div class="row">
                        <div class="col-md-4">
                          <div class="form-group">
                            <label>Residencia(Municipio)</label>
                            <input type="text" name="residence" class="form-control text-uppercase" placeholder="Zapopan...">
                          </div>
                        </div>
                        <div class="col-md-4">
                          <div class="form-group">
                            <label>Estado</label>
                            <input type="text" name="country" class="form-control text-uppercase" placeholder="Jalisco...">
                          </div>
                        </div>
