<form class="form-signin" action="/updateProfile" method="post" enctype="application/x-www-form-urlencoded">
  <h2 class="form-signin-heading">Editar perfil</h2>

  <label for="name">Nombre(s):</label>
  <input type="text" class="text-uppercase form-control" id="name" name="name" value="<%=user.name%>"required/>
  <label for="dadLastName">Primer Apellido:</label>
  <input type="text" class="text-uppercase form-control" name="dadLastName" value="<%=user.dadLastName%>"required/>
  <label for="momLastName">Segundo Apellido:</label>
  <input type="text" class="text-uppercase form-control" name="momLastName" value="<%=user.momLastName%>" required/>
  <label for="cellphone">Celular:</label>
  <input type="text" onkeypress='return event.charCode >= 48 && event.charCode <= 57' class="text-uppercase form-control" name="cellphone" value="<%=user.cellphone%>" required/>
  <label for="cp">C.P.:</label>
  <input type="text" onkeypress='return event.charCode >= 48 && event.charCode <= 57' class="text-uppercase form-control" name="cp" value="<%=user.cp%>" required/>
  <label for="email">Correo:</label>
  <input type="text" class="form-control" name="email" value="<%=user.email%>"/>
  <label for="residence">Lugar de residencia:</label>
  <input type="text" class="text-uppercase form-control" name="residence" value="<%=user.residence%>"/>

  <label for="gender">Sexo:</label><br />
  <label class="radio-inline"><input type="radio" class="radio-inline" name="gender" value="Masculino" checked> Masculino</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="gender" value="Femenino"> Femenino</label><br />

  <label for="occupation">Ocupación:</label><br />
  <label class="radio-inline"><input type="radio" class="radio-inline" name="occupation" value="Empleado" checked> Empleado</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="occupation" value="Estudiante"> Estudiante</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="occupation" value="Empresario"> Empresario</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="occupation" value="Desempleado"> Desempleado</label><br />

  <label for="scholarship">Escolaridad:</label><br />
  <label class="radio-inline"><input type="radio" class="radio-inline" name="scholarship" value="Primaria" checked> Primaria</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="scholarship" value="Secundaria"> Secundaria</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="scholarship" value="Preparatoria"> Preparatoria</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="scholarship" value="Licenciatura"> Licenciatura</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="scholarship" value="Posgrado"> Posgrado</label><br />

  <label for="civilStatus">Estado Civil:</label><br />
  <label class="radio-inline"><input type="radio" class="radio-inline" name="civilStatus" value="Soltero" checked> Soltero</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="civilStatus" value="Casado"> Casado</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="civilStatus" value="Unión libre"> Unión libre</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="civilStatus" value="Divorciado"> Divorciado</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="civilStatus" value="Viudo"> Viudo</label><br />

  <label for="religion">Religión:</label><br />
  <label class="radio-inline"><input type="radio" class="radio-inline" name="religion" value="Católico" checked> Católico</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="religion" value="Judío"> Judío</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="religion" value="Ortodoxos"> Ortodoxos</label>
  <label class="radio-inline"><input type="radio" class="radio-inline" name="religion" value="Otro"> Otro</label><br />


  <button type="submit" class="btn btn-default">Guardar</button>
</form>
